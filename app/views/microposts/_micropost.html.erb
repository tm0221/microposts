<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user == micropost.user %>
      <%= link_to "delete", micropost, method: :delete,
                                     data: { confirm: "You sure?" } %>
    <% else %>
      <span id="favorite_form">
        <% if micropost.favorited_by? current_user %>
          <%= render 'users/unfavorite_link',micropost:micropost %>
        <% else %>
          <%= render 'users/favorite_link',micropost:micropost %>
        <% end %>
      </span>
    <% end %>
  </span>
  
ã€€<%= image_tag micropost.thumb.url if micropost.image? %>

</li>