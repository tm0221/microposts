<div class="microposts">
  <li>
  <%= link_to gravatar_for(favorite.micropost.user, size: 50), favorite.micropost.user %>
  <span class="user"><%= link_to favorite.micropost.user.name, favorite.micropost.user %></span>
  <span class="content"><%= favorite.micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(favorite.micropost.created_at) %> ago.
  
    <span class="link_underline">
      <% if current_user.favorites.find_by(micropost_id: favorite.micropost.id) %>
        <%= link_to micropost_favorites_path(favorite.micropost), method: :delete do %>
          <i class="glyphicon glyphicon-heart unlink_color" aria-hidden="true" ></i>
        <% end %>
      <% else %>
        <%= link_to micropost_favorites_path(favorite.micropost), method: :post do %>
          <i class="glyphicon glyphicon-heart link_color" aria-hidden="true" ></i>
        <% end %>
      <% end %>
    </span>
    
    <% if current_user.retweets.find_by(before_id: favorite.micropost.id) %>
      <% deleteretweet = current_user.retweets.find_by(before_id: favorite.micropost.id) %>
      <%= link_to micropost_retweets_path(deleteretweet.micropost_id), method: :delete do%>
        <i class="glyphicon glyphicon-retweet unlink_color" , aria-hidden="true" ></i>
      <% end %> 
    <% else %>
      <%= link_to micropost_retweets_path(favorite.micropost.id), method: :post do %>
        <i class="glyphicon glyphicon-retweet link_color" , aria-hidden="true" ></i>
      <% end %>
    <% end %>  
  </span>
  
ã€€<%= image_tag favorite.micropost.avatar.url if favorite.micropost.avatar? %>
  </li>
</div>  
 

